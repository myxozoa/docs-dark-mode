{
  "name": "Docs DarkMode",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Dark mode for Google Docs 2021",
  "permissions": ["tabs", "scripting", "storage", "webNavigation"],
  "host_permissions": ["https://docs.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/*"],
      "css": ["darkmode.css"],
      "js": ["switch.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "32": "icon.png"
    }
  }
}
